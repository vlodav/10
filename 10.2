#include <iostream>
using namespace std;
// Функция для вычисления произведения
double proizvedenie(int k, int m) {
    if (k >= m) {
        return 1;
    }
    else {
        return (1.0 / k + 1.0 / m) * proizvedenie(k + 1, m);
    }
}

// Функция для вычисления суммы
double summa(int p, int a) {
    if (p >= 5) {
        return 0;
    }
    else {
        return pow(a, p) / sin(p) + summa(p + 1, a);
    }
}

