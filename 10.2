#include <iostream>
#include <cmath>
using namespace std;

double summ(int a, int p)
{
    if (p == 0)
        return 0;
    double value = pow(a, p) / sin(p);
    return value + summ(a, p - 1);
}

double prod(int m, int k)
{
    if (k > 8)
        return 1;
    double value = 1.0 / k + 1.0 / m;
    return value * prod(m, k + 1);
}

int main() {
    setlocale(LC_ALL, "ru");
    int a = 3; // Примерное значение для 'a'
    int p = 5; // Примерное конечное значение для 'p'

    int m = 4; // Примерное значение для 'm'

    cout << "Сумма: " << summ(a, p) << endl;

    double productValue = m * prod(m, 3); // Начиная с k=3, как в примере
    cout << "Произведение: " << productValue << endl;

    cout << "Произведение * сумму: " << productValue * summ(a, p) << endl;

    return 0;
}


